@page
@model XML_Web_Services_Project.Pages.RecreationModel
@using NeighborhoodFriend_RecreationData;
@{
    ViewData["Title"] = "Recreation Data";
    List<RecreationData> recreations = (List<RecreationData>)ViewData["RecreationDatas"];

}



    <div id="content">
            <div class="text-center">
                <div class="row">
                <h3>Recreation Facilities</h3>
                        <form action="" method="get" class="form-inline">
                            <input asp-for="Query" name ="query" id="query" class="form-control mr-sm-2 mb-2" placeholder="Postal Code" />
                    <button type="submit" class="btn btn-primary bg-dark text-light mb-2">Search</button>
                        </form>
               </div>
            </div>
    </div>

 
<div class="container marketing">
    @if (Model.SearchCompleted)
    {
        @if (recreations != null)
        {
            @foreach (RecreationData RecreationData in recreations)
            {
                <div class="card m-sm-5" style="background-color: lavenderblush;">
                <div class="card-body">

                <div class="row featurette">
                    <div class="text-center">
                                <h4>@RecreationData.Name</h4>
                                <p class="lead"><b> Facility Type:</b> @RecreationData.FacilityType</p>
                                <p class="lead"><b>ZIP: </b> @RecreationData.ZipCode

                </p>
                                <p class="lead"><b>PhoneNumber:</b> @RecreationData.Phone

                </p>
                        <p class="lead">@{
                            var HumanAddress = @RecreationData.Location.HumanAddress;
                            String[] pairs = HumanAddress.Split("\"");
                            string Address = pairs[3];
                         }</p>
                                <p class="lead"><b> Address:</b> @Address

                </p>

                    </div>
                    </div>
                    </div>
                </div>
            }

        }
    }
</div>

