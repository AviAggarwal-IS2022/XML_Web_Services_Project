<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XML_Web_Services_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XML_Web_Services_Project.styles.css" asp-append-version="true" />
    <link href="~/css/datatable.css" rel="stylesheet" />
    @*<script src="https://code.jquery.com/jquery-3.5.1.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/datatable.js"></script>
</head>
<body>
    <header>
        <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black box-shadow">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <div class="logo-image">
                        <img src="~/Logo.jpeg" class="img-fluid"/>
                    </div>
                </a>
                <a class="navbar-brand" asp-area="" asp-page="/Index">Neighborhood Friend</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/RestView">Restaurants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/RecView">Recreation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CrimeView">Crime Rate</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top position-fixed footer text-muted bg-black">
        <div class="container">
            <div class="row">
                <p class="text-white mb-1" style="text-align: center"> For further queries, reach out to us at customersupport&#x40neighborhoodfriend.com </p>
            </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>