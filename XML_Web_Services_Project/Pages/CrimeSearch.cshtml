@page
@model XML_Web_Services_Project.Pages.CrimeModel
@using NeighborhoodFriend_CrimeData;
@{
    ViewData["Title"] = "Crime Data";
    List<CrimeData> crimes = (List<CrimeData>)ViewData["CrimeDatas"];

}

    



  
        <div id="content">
            <div class="text-center">
                <div class="row">
            <h3>Crime Incidents</h3>
                    <form action="" method="get" class="form-inline">
                        <input asp-for="Query" name="query" id="query" class="form-control search-form" placeholder="Postal Code" />
                        <button type="submit" class="btn btn-primary bg-dark text-light mb-2 mt-2">Search</button>
                    </form>
                </div>
            </div>
        </div>
 


<div class="container marketing">
    @if (Model.SearchCompleted)
    {
        @if (crimes != null)
        {
            @foreach (CrimeData CrimeData in crimes)
            {
                  <div class="card m-sm-5" style="background-color: lavenderblush;">
                <div class="card-body">
                <div class="row featurette">
                    <div class="text-center">
                        <h4>@CrimeData.Offense</h4>
                        <p class="lead"><b> Date Reported:</b> @CrimeData.DateReported</p>
                        <p class="lead"><b>Location: </b> @CrimeData.Location</p>
                        <p class="lead"><b> ZIP: </b>@CrimeData.Zip</p>
                        <p class="lead"><b> Neighborhood:</b> @CrimeData.CommunityCouncilNeighborhood</p>
                    </div>
               </div>
                 </div>
               </div>
            }

        }
    }
</div>


