@page
@model XML_Web_Services_Project.Pages.RestaurantModel
@using NeighborhoodFriend_RestaurantData;
@{
    ViewData["Title"] = "Restaurant Data";
    List<RestaurantData> restaurants = (List<RestaurantData>)ViewData["RestDatas"];

}

<div class="text-center">
    <div class="row">
        <form action="" method="get" class="form-inline">
            <input asp-for="Query" name ="query" id="query" class="form-control mr-sm-2 mb-2" placeholder="Postal Code" />
            <button type ="submit" class="btn btn-primary mb-2">Search</button>
        </form>
    </div>
</div>
<div class="container marketing">
    @if (Model.SearchCompleted)
    {
        @if (restaurants != null)
        {
            @foreach (RestaurantData RestaurantData in restaurants)
            {
                            <hr class="featurette-divider">

                            <div class="row featurette">
                                <div>
                                    <h4>@RestaurantData.BusinessName</h4>
                                    <p class="lead">@RestaurantData.Address</p>
                                    <p class="lead">@RestaurantData.City</p>
                                    <p class="lead">@RestaurantData.State</p>
                                    <p class="lead">@RestaurantData.PostalCode</p>
                                    <p class="lead">@RestaurantData.PhoneNumber</p>
                                    <p class="lead">@RestaurantData.LicenseNo</p>
                                </div>
                            </div>

            }

        }
    }
</div>

<script>
    $(document).ready(function () {
